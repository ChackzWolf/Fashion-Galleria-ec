    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              {{!-- <h5 class="card-title">Users</h5> --}}

              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>

                    <th scope="col">Name</th>
                    <th scope="col">Pincode</th>
                    <th scope="col">status</th>
                    <th scope="col">Date</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment Method</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each pendingOrders}}
                  {{#each products}}
                  <tr>
                    <th scope="row">{{increment @key}}</th>
                    <td>{{name}}</td>
                    <td>{{../address.pincode}}</td>
                    {{#if (or status "returnAcceptDef" "returnAcceptNonDef")}}
                    <td>Return accepted</td>
                    {{/if}}
                    {{#if (eq status 'pending')}}
                    <td>Order pending</td>
                    {{/if}}
        
                    {{#if (or status "returnNonDefective" "returnDefective")}}
                    <td>Requested return</td>
                    {{/if}}

                    {{#if (eq status 'delivered')}}
                    <td>Delivered</td>
                    {{/if}}

                    {{!-- <td>{{this.status}}</td> --}}
                    {{#if (eq status 'shipped')}}
                    <td>Shipped</td>
                    {{/if}}

                    <td>{{../date}}</td>
                    <td>{{price}}</td>
                    <td>{{../paymentMethod}}</td>


                    <td>
                      <a href="/order-detail-view?id={{../_id}}"><button type="button" class="btn btn-primary">View Details</button></a>

                      {{#if (eq status "pending")}}

                        <button type="button" class="btn btn-danger" data-mdb-toggle="modal"
                        data-mdb-target="#exampleModal{{@key}}">Cancel</button>
                      {{/if}}

                      {{#if (eq status "returnDefective")}}
                      <a href="" style="color:rgb(255, 123, 0); pointer-events: none;" disabled>Return pending</a>
                      {{/if}}

                      {{#if (eq status "returnNonDefective")}}
                      <a href="" style="color:rgb(255, 123, 0); pointer-events: none;" disabled>Return pending</a>
                      {{/if}}


                      {{#if (or status "returnAcceptDef" "returnAcceptNonDef")}}
                      <a href="" style="color:rgb(0, 189, 6); pointer-events: none;" disabled> Returned</a>
                      {{/if}}
                      {{#if (eq status "delivered")}}
                      <a href="" style="color:rgb(0, 189, 6); pointer-events: none;" disabled> Delivered</a>
                      {{/if}}
                      {{#if (eq status "returnPending")}}
                      <a href="" style="color:rgb(255, 123, 0); pointer-events: none;" disabled>Return pending</a>
                      {{/if}}
                      {{#if (eq status "cancelled")}}
                          <a href="" style="color:red; pointer-events: none;" disabled> Cancelled</a>
                      {{/if}}


                    </td>



                  </tr>



                  <div class="modal fade" id="exampleModal2{{@key}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                          <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">Why are you returning this order</div>
                        <fieldset class="row mb-3 ml-5">
                          <div class="col-sm-10">
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="returnType" id="gridRadios1" value="0">
                              <label class="form-check-label" for="gridRadios1">
                                Defective
                              </label>
                            </div>
                            <div class="form-check disabled">
                              <input class="form-check-input" type="radio" name="returnType" id="gridRadios" value="1">
                              <label class="form-check-label" for="gridRadios3">
                                Other
                              </label>
                            </div>
                          </div>
                        </fieldset>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-warning" name="order_id" id="order_id"
                            onclick="returnOrder('{{this._id}}')">Return Order</button>

                        </div>
                      </div>
                    </div>
                  </div>




                  <div class="modal fade" id="exampleModal{{@key}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                          <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">Are you sure?</div>
                        <div class="modal-footer">

                          <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>

                          <a href="/cancel-user-order?id={{../_id}}&&pro_Id={{this._id}}"><button type="button"
                              class="btn btn-danger">Cancel Order</button></a>

                        </div>
                      </div>
                    </div>
                  </div>
                  {{/each}}
                  {{/each}}
